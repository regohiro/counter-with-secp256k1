{
  "name": "counter-with-secp256k1",
  "author": "regohiro",
  "version": "1.0.0",
  "description": "Counter with secp256k1 signature",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm-run-all husky:init",
    "build": "anchor build",
    "test": "anchor test",
    "script": "ts-node -r dotenv/config",
    "start": "solana-test-validator",
    "prettier:check": "prettier --check \"**/*.{ts,js}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,js}\"",
    "lint:check": "yarn prettier:check && npx eslint '**/*.{js,ts}'",
    "lint:fix": "yarn prettier:fix &&  npx eslint '**/*.{js,ts}' --fix",
    "clean": "rimraf target",
    "husky:init": "husky install",
    "husky:commit": "yarn lint:check",
    "husky:push": "yarn lint:fix"
  },
  "lint-staged": {
    "**/*.{ts,js,rs}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@project-serum/anchor": "^0.22.0",
    "@project-serum/common": "^0.0.1-beta.3",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.35.1",
    "@types/chai-as-promised": "^7.1.5",
    "chai-as-promised": "^7.1.1",
    "keccak256": "^1.0.6",
    "secp256k1": "^4.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.10",
    "@types/secp256k1": "^4.0.3",
    "bn.js": "^5.2.0",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "8.4.0",
    "husky": "^7.0.2",
    "lint-staged": "^12.3.1",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "yarn-upgrade-all": "^0.6.1"
  }
}
